@model IEnumerable<thekitchen_aspnetcore.Models.Cart>

@{
    ViewData["Title"] = "Shopping Cart";
}

            <div class="cart-page">
                <div class="container">
                    <div class="row">
                        <div class="col">

                            <!-- Cart Bar -->
                            <div class="cart-bar">
                                <ul
                                    class="cart-bar-list item-list d-flex flex-row align-items-center justify-content-end">
                                    <li class="mr-auto">Product</li>
                                    <li>Price</li>
                                    <li>Quantity</li>
                                    <li>Total</li>
                                </ul>
                            </div>
                            
                            <!-- Cart Items -->
                            <div class="cart-items">
                                @if(Model.Count() > 0){
                                <ul class="cart-items-list">
                                    @foreach (var item in Model) {
                                    <!-- Cart Item -->
                                    <li
                                        class="cart-item item-list d-flex flex-row align-items-center justify-content-start">
                                        <div
                                            class="cart-product d-flex flex-md-row flex-column align-items-center justify-content-start mr-auto">
                                            <div>
                                                <div class="cart-product-image"><img src="~/img-products/@Html.DisplayFor(modelItem => item.Products.Image)" alt="">
                                                </div>
                                            </div>
                                            <div class="cart-product-name-container">
                                                <div class="cart-product-name"><a asp-controller="Products" asp-action="Index" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.Products.Name)</a></div>
                                                <div class="cart-product-text cart-product-category">In <a asp-controller="Home" asp-action="Index" asp-route-id="@item.Products.CategoryId">@item.Products.Categories.Name</a></div>
                                            </div>
                                        </div>
                                        <div class="cart-product-price cart-product-text">@Html.DisplayFor(modelItem => item.Products.Price)</div>
                                        <div class="cart-product-quantity-container">
                                            <div class="cart-product-quantity ml-auto mr-auto text-center">
                                                <span class="cart-product-text cart-product-quantity-number">@Html.DisplayFor(modelItem => item.Quantity)</span>
                                                <div class="cart-quantity-sub cart-quantity-button text-center">
                                                    <span><a asp-controller="Carts" asp-action="subQuantity" asp-route-id="@item.CartId">-</a></span>
                                                </div>
                                                <div class="cart-quantity-add cart-quantity-button text-center">
                                                    <span><a asp-controller="Carts" asp-action="addQuantity" asp-route-id="@item.CartId">+</a></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="cart-product-total cart-product-text">@(item.Quantity*@item.Products.Price)</div>
                                    </li>
                                    }
                        </ul>
                        }else{
                            <div class="cart-empty text-center"><p><img src="~/img/empty-product-img.png"></p><br>Shopping Cart Empty</div>
                        }
                        </div>
                        </div>
                    </div>
                    @if(Model.Count() > 0){
                           		<div class="cart-buttons d-flex flex-row align-items-start justify-content-start">
									<div
										class="cart-buttons-inner ml-sm-auto d-flex flex-row align-items-start justify-content-start flex-wrap">
										<div class="button button-continue trans_200"><a asp-controller="Orders" asp-action="CheckOutOrder">Continue
												Checkout</a></div>
									</div>
								</div>
                    }
                </div>
            </div>